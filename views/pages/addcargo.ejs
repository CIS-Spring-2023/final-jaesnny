<!DOCTYPE html>
<html lang="en">

<head>
    <%- include('../partials/head'); %>
</head>

<body class="container">

    <header>
        <%- include('../partials/header'); %>
    </header>

    <main>
        <div class="row">
            <div class="col-sm-8">
                <h1>Cargo</h1>
                <table class="table">
                    <!-- table code -->
                </table>

                <h2>Add New Cargo</h2>
                <form action="/cargo/add" method="POST">
                    <div class="form-group">
                        <label for="weight">Weight:</label>
                        <input type="text" id="weight" name="weight" required>
                    </div>
                    <div class="form-group">
                        <label for="type">Cargo Type:</label>
                        <input type="text" id="cargotype" name="cargotype" required>
                    </div>
                    <div class="form-group">
                        <label for="departure">Departure:</label>
                        <input type="datetime-local" id="departure" name="departure" required>
                    </div>
                    <div class="form-group">
                        <label for="arrival">Arrival:</label>
                        <input type="datetime-local" id="arrival" name="arrival" required>
                    </div>
                    <div class="form-group">
                        <label for="shipid">Ship ID:</label>
                        <input type="text" id="shipid" name="shipid" required>
                    </div>
                    <button type="submit" class="btn btn-primary">Submit</button>
                </form>
            </div>
        </div>
    </main>

    <footer>
        <%- include('../partials/footer'); %>
    </footer>

</body>

</html>